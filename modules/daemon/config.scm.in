;;; Commentary:

;; This module provides compile-time configuration variables for
;; guile-daemon.

;;; Code:

(define-module (daemon config)
  #:export (%version
            %package-name
            %package-url
            %copyright-year
            %bug-address))

(define %version
  "@PACKAGE_VERSION@")

(define %package-name
  "@PACKAGE_NAME@")

(define %copyright-year
  "@COPYRIGHT_YEAR@")

